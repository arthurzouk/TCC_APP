<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC_APP.Views.DetalhesDoProdutoPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nome:" FontSize="Medium" />
        <Label Text="{Binding ItemProduto.Nome}" FontSize="Small"/>
        <Label Text="Preco:" FontSize="Medium" />
        <Label Text="{Binding ItemProduto.Preco}" FontSize="Small"/>
    </StackLayout>
</ContentPage>