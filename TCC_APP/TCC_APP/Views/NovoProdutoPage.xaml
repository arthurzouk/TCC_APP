<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC_APP.Views.NovoProdutoPage"
             Title="Novo Produto">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value="cancel.png"/>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem Text="Save" Clicked="Save_Clicked">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value="save.png"/>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Nome" FontSize="Medium" />
            <Entry Text="{Binding Item.Nome}" FontSize="Small" />
            <!--<Label Text="Preço" FontSize="Medium" />-->
            <Label Text="Quantidade" FontSize="Medium" />
            <Entry Text="1" FontSize="Small" Margin="0" />
            <!--<Entry Text="{Binding Item.Preco}" FontSize="Small" Margin="0" />-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>